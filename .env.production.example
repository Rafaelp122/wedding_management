# ===========================================
# Production Environment Variables
# ===========================================
# ⚠️ NUNCA commite este arquivo com valores reais!
# Copie para .env e preencha com valores de produção

# ===========================================
# Django Core
# ===========================================
SECRET_KEY=your-secret-key-here-at-least-50-chars-long-and-random
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_DB=wedding_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-database-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ===========================================
# Celery (Background Tasks)
# ===========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===========================================
# Sentry (Error Monitoring) - Optional
# ===========================================
# SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# ===========================================
# Email Configuration (SMTP)
# ===========================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ===========================================
# SSL/Security (quando tiver domínio e SSL)
# ===========================================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# ===========================================
# Static/Media Files (se usar S3/CDN)
# ===========================================
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
