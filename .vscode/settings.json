{
  "window.zoomLevel": 0,
  "liveServer.settings.port": 5501,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // --- Python Config ---
  "python.languageServer": "Pylance",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.analysis.extraPaths": [
    "${workspaceFolder}/backend",
    "${workspaceFolder}/backend/apps"
  ],

  // --- Formatação e Linting (O segredo está aqui) ---
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      // Usar o sufixo .ruff impede que outras extensões tentem formatar ao mesmo tempo
      "source.organizeImports.ruff": "explicit",
      "source.fixAll.ruff": "explicit"
    }
  },

  "ruff.enable": true,
  "ruff.nativeServer": true,
  "ruff.importStrategy": "fromEnvironment",
  "python.linting.enabled": false,

  // --- JS / TS / CSS (Prettier) ---
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[javascript]": { "editor.tabSize": 2 },
  "[typescript]": { "editor.tabSize": 2 },
  "[typescriptreact]": { "editor.tabSize": 2 },
  "[json]": { "editor.tabSize": 2 },

  // --- Outros ---
  "eslint.workingDirectories": ["./frontend"],
  "files.exclude": {
    "**/.git": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true
  }
}
