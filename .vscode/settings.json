{
  "window.zoomLevel": 0,
  "liveServer.settings.port": 5501,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // --- Python Config ---
  "python.languageServer": "Pylance",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.analysis.extraPaths": [
    "${workspaceFolder}/backend",
    "${workspaceFolder}/backend/apps"
  ],

  // --- Formatação e Linting (Otimizado para T480) ---
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": "always",
      "source.fixAll.ruff": "always" // Força o Ruff a consertar Lint (RUF022, etc) em todo save
    }
  },

  "ruff.enable": true,
  "ruff.nativeServer": true,
  "ruff.importStrategy": "fromEnvironment",
  "ruff.fixAll": true, // Ativa a capacidade de corrigir todos os problemas auto-fixáveis
  "ruff.organizeImports": true, // Garante que a organização de imports via Ruff esteja ativa

  "python.linting.enabled": false,

  // --- JS / TS / CSS (Prettier) ---
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[javascript]": { "editor.tabSize": 2 },
  "[typescript]": { "editor.tabSize": 2 },
  "[typescriptreact]": { "editor.tabSize": 2 },
  "[json]": { "editor.tabSize": 2 },

  // --- Outros ---
  "eslint.workingDirectories": ["./frontend"],
  "files.exclude": {
    "**/.git": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true
  }
}
